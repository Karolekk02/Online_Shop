<!DOCTYPE html>
<html>
    <header>
        <meta charset="UTF-8">
        <title><%= title %></title>
        <link rel="stylesheet" href="HomePage.css">
        <nav>
            <ul>
                <li><a href="/"><img src="https://cdn0.iconfinder.com/data/icons/set-app-incredibles/24/Home-01-512.png" alt="HomePage"></a></li>
                <li><a href="/account"><img src="https://cdn.iconscout.com/icon/free/png-256/free-account-269-866236.png" alt="Account"></a></li>
                <% if(user.role == "admin") {%>
                <li><a href="/users">Users</a></li>
                <li><a href="/assortment">Assortment</a></li>
                <li><a href="/orders">Orders</a></li>
                <% } %>
                <li><a href="/cart"><img src="https://static-00.iconduck.com/assets.00/shopping-cart-icon-512x462-yrde1eu0.png" alt="Cart"></a></li>
                <% if(logged == true) {%>
                    <li><a href="/login"><img src="https://cdn2.iconfinder.com/data/icons/social-productivity-line-art-1/128/logout-512.png" alt="Logout"></a></li>
                <% } else { %>
                    <li><a href="/login">Sign in</a></li>
                <%} %> 
            </ul>
        </nav>
    </header>
    <body>
        <form autocomplete="off" action="http://localhost:3000/" method="post">
            <div class="search-container">
                <input type="text" placeholder="Search" name="search">
                <button type="submit">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/0/0b/Search_Icon.svg/1024px-Search_Icon.svg.png" alt="Search">
                </button>
            </div>
        </form>
        <ol>
            <% products.forEach(function(product) { %>
                <li>
                    <img src=<%= product.img %> alt='Image'>
                    <h1><%= product.brand %> <%= product.model %></h1>
                    <p>Year of production: <%= product.year %></p> <p>Power: <%= product.hp %>hp</p>
                    <h2> <%= product.price %> pln 
                        <form action="http://localhost:3000/" method="post">
                            <input type="hidden" name="id" value="<%= product.id %>">
                            <input type="hidden" name="brand" value="<%= product.brand %>">
                            <input type="hidden" name="model" value="<%= product.model %>">
                            <input type="hidden" name="hp" value="<%= product.hp %>">
                            <input type="hidden" name="img" value="<%= product.img %>">
                            <input type="hidden" name="year" value="<%= product.year %>">
                            <input type="hidden" name="price" value="<%= product.price %>">
                            <button type="submit">
                                <img src="https://static-00.iconduck.com/assets.00/shopping-cart-icon-512x462-yrde1eu0.png" alt="Cart">
                            </button>
                        </form>
                    </h2>
                </li>
            <% }); %>
        </ol>
        <main>  
            <script>
            </script>
        </main>
        <footer>
            <p>@Copyright by Karol Burczyk</p>
        </footer>
    </body>
</html>
