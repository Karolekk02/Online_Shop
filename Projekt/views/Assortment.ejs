<!DOCTYPE html>
<html>
    <header>
        <meta charset="UTF-8">
        <title><%= title %></title>
        <link rel="stylesheet" href="Assortment.css">
        <nav>
            <ul>
                <li><a href="/"><img src="https://cdn0.iconfinder.com/data/icons/set-app-incredibles/24/Home-01-512.png" alt="HomePage"></a></li>
                <li><a href="/account"><img src="https://cdn.iconscout.com/icon/free/png-256/free-account-269-866236.png" alt="Account"></a></li>
                <% if(user.role == "admin") {%>
                <li><a href="/users">Users</a></li>
                <li><a href="/assortment">Assortment</a></li>
                <li><a href="/orders">Orders</a></li>
                <% } %>
                <li><a href="/cart"><img src="https://static-00.iconduck.com/assets.00/shopping-cart-icon-512x462-yrde1eu0.png" alt="Cart"></a></li>
                <% if(logged == true) {%>
                    <li><a href="/login"><img src="https://cdn2.iconfinder.com/data/icons/social-productivity-line-art-1/128/logout-512.png" alt="Logout"></a></li>
                <% } else { %>
                    <li><a href="/login">Sign in</a></li>
                <%} %> 
            </ul>
        </nav>
    </header>
    <body>
        <ol>
            <% products.forEach(function(product) { %>
                <li>
                    <img src=<%= product.img %> alt='Image'>
                    <form action="http://localhost:3000/assortment" method="post">
                        <input type="hidden" name="id" value="<%= product.id %>">
                        <p>Brand:
                        <input type="text" name="brand" value="<%= product.brand %>"></p>
                        <p>Model:
                        <input type="text" name="model" value="<%= product.model %>"></p>
                        <p>Hp:
                        <input type="text" name="hp" value="<%= product.hp %>"></p>
                        <p>Img Link:
                        <input type="text" name="img" value="<%= product.img %>"></p>
                        <p>Year:
                        <input type="text" name="year" value="<%= product.year %>"></p>
                        <p>Price:
                        <input type="text" name="price" value="<%= product.price %>"></p>
                        <button type="submit" class="edit-button">Submit changes</button>
                    </form>
                    <form action="http://localhost:3000/assortment" method="post">
                        <input type="hidden" name="action" value=<%= product.id %>>
                        <button class="delete-button">Delete</button>
                    </form>
                </li>
            <% }); %>
            <li>
                <form action="http://localhost:3000/assortment" method="post">
                    <h1>New product:</h1>
                    <p>Id:
                    <input type="text" name="Sid" placeholder="Id"></p>
                    <p>Brand:
                    <input type="text" name="Sbrand" placeholder="Brand"></p>
                    <p>Model:
                    <input type="text" name="Smodel" placeholder="Model"></p>
                    <p>Hp:
                    <input type="text" name="Shp" placeholder="Hp"></p>
                    <p>Img Link:
                    <input type="text" name="Simg" placeholder="Img link"></p>
                    <p>Year:
                    <input type="text" name="Syear" placeholder="Year"></p>
                    <p>Price:
                    <input type="text" name="Sprice" placeholder="Price"></p>
                    <button type="submit" class="edit-button">Submit new product</button>
                </form>
            </li>
        </ol>
        <main>  
            <script>
            </script>
        </main>
        <footer>
            <p>@Copyright by Karol Burczyk</p>
        </footer>
    </body>
</html>
